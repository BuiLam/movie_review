<%= will_paginate @users %>
<table class="table table-hover">
    <thead>
      <tr class="danger">
        <th>Name</th>
        <th>Email</th>
        <th>Picture</th>
        <th>Deactivate</th>
      </tr>
    </thead>
    <tbody>
       <% @users.each do |user| %>
      <tr class="success">
        <td><%= link_to user.name, user %></td>
        <td><%= link_to user.email, user%></td>
        <td><%= link_to user.picture, user%></td>
        <td><button type="button" class="btn btn-danger"><%= link_to "Block", user, method: :deactivated,
                                  data: { confirm: "Are You sure?" } %>
  <% end %>
  </button></td>
      </tr>
    </tbody>
  </table>
<%= will_paginate @users %>